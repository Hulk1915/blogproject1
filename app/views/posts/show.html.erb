<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Редактировать", edit_post_path(@post), :class=>'btn btn-warning' %>
<br>
</br>
<%= button_to "Удалить", post_path(@post), method: :delete, onclick: "return confirm('Вы уверены, что хотите удалить этот пост?');", class: 'btn btn-danger' %>
<hr>

<h2>Все комментарии</h2>
<hr>
<% @post.comments.each do |comment| %>
<div class="lead">
    <p>
        <storng class="blockquote">
            <%=comment.username%>
        </storng>: <%=comment.body%>
    </p>
</div>
<% end %>


<h2>Добавление комментария</h2>

<%=form_for([@post, @post.comments.build]) do |f| %>

<p>
    Пользователь<br>
    <%= f.text_field(:username, {:class =>'form-control'}) %>

</p>

<p>
    Текст комментария<br>
    <%= f.text_area(:body, {:class =>'form-control'}) %>

</p>

<p>
   
     <%= f.submit("Добавить комментарий", class: 'btn btn-warning') %>

</p>
<% end %>



